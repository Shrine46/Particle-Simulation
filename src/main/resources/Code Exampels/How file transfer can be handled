public class ParticleSim {
    public static void main(String[] args) {
        File file = new File("output/sim_data.json");

        try {
            // Step 1: Run Python and wait for it to complete (as done before)
            String command = "python python/scripts/simulation.py";  // Path to Python script
            Process process = Runtime.getRuntime().exec(command);
            process.waitFor();

            // Step 2: Read the JSON file generated by Python
            Scanner scanner = new Scanner(file);
            String jsonData = scanner.useDelimiter("\\A").next();
            scanner.close();

            // Step 3: Use the data for visualization or further processing
            System.out.println("Data from Python simulation: " + jsonData);

        } catch (Exception e) {
            e.printStackTrace();
        } finally {
            // Step 4: Delete the file after processing
            if (file.exists()) {
                boolean deleted = file.delete();
                if (deleted) {
                    System.out.println("The file was successfully deleted.");
                } else {
                    System.out.println("The file could not be deleted.");
                }
            }
        }
    }
}